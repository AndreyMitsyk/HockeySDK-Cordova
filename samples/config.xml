<?xml version='1.0' encoding='utf-8'?>
<widget id="com.microsoft.cordova-hockey-sdk-sample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>cordova-hockey-sdk-sample</name>
    <description>
        A sample Apache Cordova application with HockeyApp SDK.
    </description>
    <author email="appcentersdk@microsoft.com" href="https://github.com/bitstadium/HockeySDK-Cordova">
        Microsoft
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.5" />
    <plugin name="cordova-plugin-hockeyapp" spec="file:sdk" />
</widget>
